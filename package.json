{
  "name": "tapayz-docs",
  "version": "1.0.0",
  "description": "Tapayz API Documentation with VitePress",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev docs --port 5000",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs --port 5000",
    "serve": "vitepress serve docs --port 5000",
    "start": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop tapayz-docs",
    "restart": "pm2 restart tapayz-docs",
    "delete": "pm2 delete tapayz-docs",
    "logs": "pm2 logs tapayz-docs",
    "deploy": "yarn build && yarn start"
  },
  "devDependencies": {
    "vitepress": "^1.0.0-rc.31",
    "vue": "^3.3.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tapayz/tapayz-docs"
  },
  "keywords": [
    "cryptocurrency",
    "payment",
    "api",
    "documentation",
    "vitepress"
  ],
  "author": "Tapayz",
  "license": "MIT"
}
